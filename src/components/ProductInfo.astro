---
import BuyForm from "@/components/BuyForm.svelte";
import Drawer from "./Drawer.astro";
const { name, description, price, id } = Astro.props;

const features = [
  "Handmade in Japan",
  "Lay-flat binding",
  "Personalized Travel Map",
];

const anim = {
  old: {
    name: "appear",
    duration: "0.5s",
    easing: "ease-in",
    direction: "reverse",
  },
  new: {
    name: "appear",
    duration: "0.5s",
    easing: "ease-in-out",
  },
};

const customTransition = {
  forwards: anim,
  backwards: anim,
};
---

<div class="product-info" transition:animate={customTransition}>
  <h1 class="product-title daruma-regular text-primary-700">{name}</h1>
  <div class="price-container">
    <p class="price">{price.jpy}</p>
    <p class="compare-price">{price.jpy * 2}</p>
  </div>

  <BuyForm {id} {name} client:idle />

  <ul class="features" role="list">
    {
      features.map((feature) => (
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            style="fill:#000"
          >
            <path d="M19.965 8.521C19.988 8.347 20 8.173 20 8c0-2.379-2.143-4.288-4.521-3.965C14.786 2.802 13.466 2 12 2s-2.786.802-3.479 2.035C6.138 3.712 4 5.621 4 8c0 .173.012.347.035.521C2.802 9.215 2 10.535 2 12s.802 2.785 2.035 3.479A3.976 3.976 0 0 0 4 16c0 2.379 2.138 4.283 4.521 3.965C9.214 21.198 10.534 22 12 22s2.786-.802 3.479-2.035C17.857 20.283 20 18.379 20 16c0-.173-.012-.347-.035-.521C21.198 14.785 22 13.465 22 12s-.802-2.785-2.035-3.479zm-9.01 7.895-3.667-3.714 1.424-1.404 2.257 2.286 4.327-4.294 1.408 1.42-5.749 5.706z" />
          </svg>
          <p>{feature}</p>
        </li>
      ))
    }
  </ul>

  <div class="description" set:html={description} />

  <Drawer
    title="⚠️ ご注意 ⚠️"
    content="検品基準をクリアした商品をお届けしておりますが、手作業のため多少のズレや色ムラ等がある場合がございます。\nご理解いただける方のみご購入をお願いいたします🙇‍♀️"
  />
  <Drawer
    title="📦 発送について"
    content="入金確認後、1週間以内に発送いたします。\n日本国内: ご注文から到着まで最大2週間🚚\n海外: ご注文から到着まで3〜4週間🛩"
  />
</div>

<style is:inline>
  .description h2 {
    font-size: 1.05rem;
    font-weight: bold;
    padding-block: 2rem 0.75rem;
  }

  .description b {
    font-weight: bold;
  }
</style>

<style>
  .product-title {
    font-size: 3.5rem;
    text-wrap: pretty;
    line-height: 0.9;
  }

  .features {
    padding-block: 10px;
  }

  li {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-block: 4px;

    p {
      font-weight: 500;
      font-size: 1.25rem;
    }
  }

  .price-container {
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  .price {
    color: var(--color-surface-200);
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.5rem;
  }

  .compare-price {
    color: lightcoral;
    font-weight: 400;
    text-decoration: line-through;
  }

  .product-info {
    display: flex;
    gap: 1rem;
    flex-flow: column nowrap;
    position: sticky;
    top: 6rem;
    /* ↑ top is needed so the title doesn't go under the header after scrolling. */
    max-height: fit-content;
  }

  .description {
    white-space: pre-line;
    text-wrap: balance;
    font-size: 1rem;
  }
</style>
