---
import BuyForm from "@/components/BuyForm.svelte";
const { name, description, price } = Astro.props;

const features = ["Feature 1", "Feature 2", "Feature 3"];

const anim = {
  old: {
    name: "appear",
    duration: "0.5s",
    easing: "ease-in",
    direction: "reverse",
  },
  new: {
    name: "appear",
    duration: "0.5s",
    easing: "ease-in-out",
  },
};

const customTransition = {
  forwards: anim,
  backwards: anim,
};
---

<div class="product-info" transition:animate={customTransition}>
  <h1 class="product-title daruma-regular">{name}</h1>
  <div class="price-container">
    <p class="price">{price}</p>
    <p class="compare-price">{price * 2}</p>
  </div>

  <BuyForm client:load />

  <div>
    <div>
      <p class="description">
        {description}
      </p>
    </div>
  </div>

  <ul class="features" role="list">
    {
      features.map((feature) => (
        <li>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            style="fill:#000"
          >
            <path d="M19.965 8.521C19.988 8.347 20 8.173 20 8c0-2.379-2.143-4.288-4.521-3.965C14.786 2.802 13.466 2 12 2s-2.786.802-3.479 2.035C6.138 3.712 4 5.621 4 8c0 .173.012.347.035.521C2.802 9.215 2 10.535 2 12s.802 2.785 2.035 3.479A3.976 3.976 0 0 0 4 16c0 2.379 2.138 4.283 4.521 3.965C9.214 21.198 10.534 22 12 22s2.786-.802 3.479-2.035C17.857 20.283 20 18.379 20 16c0-.173-.012-.347-.035-.521C21.198 14.785 22 13.465 22 12s-.802-2.785-2.035-3.479zm-9.01 7.895-3.667-3.714 1.424-1.404 2.257 2.286 4.327-4.294 1.408 1.42-5.749 5.706z" />
          </svg>
          <p>{feature}</p>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .product-title {
    font-size: 3.5rem;
    text-wrap: balance;
    line-height: 0.9;
    margin-bottom:;
  }

  .features {
    padding-block: 10px;
  }

  li {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-block: 4px;

    p {
      font-weight: 500;
      font-size: 1.25rem;
    }
  }

  .price-container {
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  .price {
    color: var(--color-surface-200);
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.5rem;
  }

  .compare-price {
    color: var(--color-surface-500);
    font-weight: 400;
    text-decoration: line-through;
  }

  .product-info {
    display: flex;
    gap: 1rem;
    flex-flow: column nowrap;
    position: sticky;
    top: 6rem;
    /* â†‘ top is needed so the title doesn't go under the header after scrolling. */
    max-height: fit-content;
  }

  .description {
    white-space: pre-line;
    font-size: 1rem;
  }
</style>
